---
import Event from "~/components/Event.astro";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<div class="events">
    <h2>{title}</h2>
    <div class="events_list">
        <Event
            date="September 1, 2024"
            label="Inspire"
            title="Miami Tee-Off: LIV Legends and Links"
            tags={['Spikers', 'Miami']}
            src="/img/events/event-wide-1.jpg"
        />
        <Event
            date="October 1, 2024"
            title="Miami Tee-Off: LIV Legends and Links"
            tags={['Spikers', 'Miami', 'Family & Kids']}
            src="/img/events/event-wide-2.jpg"
        />
        <Event
            date="October 1, 2024"
            label="connect"
            title="Miami Tee-Off: LIV Legends and Links"
            tags={['Spikers', 'Miami', 'Family & Kids']}
            src="/img/events/event-wide-1.jpg"
        />
    </div>
</div>
