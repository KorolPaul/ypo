---
import Event from "~/components/Event.astro";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<div class="events">
    <h2>{title}</h2>
    <div class="events_list">
        <Event
            date="December 12, 2024"
            title="Costa Rican Countdown: Exclusive Preview at Ritz Carlot"
            tags={['exclusive', 'Costa Rica Ritz Carlton', 'Enrollment Open']}
            src="/img/events/event-wide-1.mp4"
            srcMobile="/img/events/event-wide-1-mobile.mp4"
            color="#FF5208"
        />
        <Event
            date="January 11, 2025"
            title="Hospitality at Home: Insights with Sternlicht and Reynal"
            tags={['Spikers', 'Miami', 'Enrollment Open']}
            src="/img/events/event-wide-2.mp4"
            srcMobile="/img/events/event-wide-2-mobile.mp4"
            color="#A6F7F7"
            label="connect"
        />
        <Event
            date="February 11, 2025"
            title="Everglades Echoes: A Miccosukee Adventure with Science and Stories"
            tags={['family', 'Everglades', 'Enrollment Open']}
            src="/img/events/event-wide-3.mp4"
            srcMobile="/img/events/event-wide-3-mobile.mp4"
            color="#D9F75C"
        />
        <Event
            date="May 3, 2025"
            label="learn"
            title="Touch of The Future -  Healthcare + Longevity Dr. Jonathan Rothberg"
            tags={['family', 'Gene Chaser Super Yacht', 'Enrollment Open']}
            src="/img/events/event-wide-4.mp4"
            srcMobile="/img/events/event-wide-4-mobile.mp4"
            color="#FFC7E9"
        />
        <Event
            date="July 1, 2025"
            label="inspire"
            title="YPO Bucket List Jet Trip"
            tags={['Limited', 'Worldwide', 'Enrollment Open']}
            src="/img/events/event-wide-5.mp4"
            srcMobile="/img/events/event-wide-5-mobile.mp4"
            color="#fff"
        />
    </div>
</div>
