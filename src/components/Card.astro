---
export interface Props {
    videoSrc?: string;
    jsonSrc?: string;
    number?: string;
    title: string;
    text: string;
    textSmall?: string;
}

const { jsonSrc, videoSrc, number, title, text, textSmall } = Astro.props;
---

<div class="card">
    <div class="card_content">
        {number && <span class="card_number">{number}</span>}
        <span class="card_title">{title}</span>
        <span class="card_text">{text}</span>
        {textSmall && <span class="card_text-small">{textSmall}</span>}
    </div>
    {videoSrc && (
        <video class="card_image" src={videoSrc} loop muted playsinline autoplay />
    )}
    {jsonSrc && (
        <div class="card_image">
            <lottie-player src={jsonSrc} background="transparent" speed="1" loop autoplay />
        </div>
    )}
</div>
<style lang="scss" is:global>
    @import "~/styles/scss/_const.scss";
    @import "~/styles/scss/_mixins.scss";

    .card {
        box-sizing: border-box;
        position: relative;
        border-radius: 16px;
        padding: 95px 22px 24px;
        position: relative;
        background-color: $cCard;
        margin-bottom: 16px;
        height: 100%;
        @include tablet {
            padding: 154px 32px 40px;
            height: auto;
        }
        @include desktop {
            margin-bottom: 0;
            border-radius: 40px;
            display: flex;
            flex-direction: column;
            min-height: 512px;
            justify-content: space-between;
            gap: 50px;
            height: 100%;
            align-items: flex-start;
        }

        &_number {
            position: absolute;
            font-size: 12px;
            color: #9A9AAC;
            left: 24px;
            top: 24px;
            @include tablet {
                font-size: 16px;
                left: 32px;
                top: 64px;
            }
        }

        &_title {
            font-weight: 500;
            font-size: 20px;
            line-height: 1;
            color: $cLight;
            display: block;
            margin-bottom: 30px;
            padding-bottom: 30px;
            border-bottom: 1px solid $cGrayDark;
            position: relative;
            z-index: 2;
            @include tablet {
                font-size: 24px;
                margin-bottom: 40px;
            }
            @include desktop {
                font-size: 32px;
            }
        }

        &_text {
            color: $cLight;
            font-size: 15px;
            line-height: 1.3;
            display: block;
            margin-bottom: 8px;
            @include tablet {
                font-size: 18px;
            }
            @include desktop {
                font-size: 20px;
            }
        }

        &_text-small {
            color: $cGray;
            font-size: 13px;
            line-height: 1.3;
            @include tablet {
                font-size: 15px;
            }
            @include desktop {
                font-size: 16px;
            }
        }
        
        &_image {
            display: block;
            position: absolute;
            top: 10px;
            right: 30px;
            width: 124px;
            @include tablet {
                top: 30px;
                right: 32px;
                width: 156px;
            }

            // .tns-item:nth-child(2) & {
            //     @include tablet {
            //         width: 116px;
            //     }
            // }
        }
    }
</style>
