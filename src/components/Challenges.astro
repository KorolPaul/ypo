---
import Challenge from "~/components/Challenge.astro";

export interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<div class="challenges">
    <h2>{title}</h2>
    <div class="challenges_list">
        <div class="swiper-holder">
            <div class="swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <Challenge
                            period="30-Day"
                            title="Cold Plunge Challenge"
                            src="/img/challenges/challenge-1.mp4"
                            color="linear-gradient(180deg, rgba(208, 201, 255, 0.54) 0%, rgba(125, 120, 153, 0.54) 100%)"
                        >
                            Starts <strong>May 12th</strong>
                        </Challenge>
                    </div>
                    <div class="swiper-slide">
                        <Challenge
                            period="10-Day"
                            title="Digital Detox challenge"
                            src="/img/challenges/challenge-2.mp4"
                            color="linear-gradient(180deg, rgba(213, 211, 198, 0.54) 0%, rgba(187, 187, 187, 0.54) 100%);"
                        >
                            Starts <strong>May 12th</strong>
                        </Challenge>
                    </div>
                    <div class="swiper-slide">
                        <Challenge
                            period="21-Day"
                            title="Flow Rope challenge"
                            src="/img/challenges/challenge-3.mp4"
                            color="linear-gradient(180deg, rgba(255, 255, 255, 0.54) 0%, rgba(187, 187, 187, 0.54) 100%);"
                        >
                            Starts <strong>May 12th</strong>
                        </Challenge>
                    </div>
                    <div class="swiper-slide">
                        <Challenge
                            period="30-Day"
                            title="Wake up earlier challenge"
                            src="/img/challenges/challenge-4.mp4"
                            color="linear-gradient(180deg, rgba(217, 247, 92, 0.36) 0%, rgba(187, 187, 187, 0.54) 100%);"
                        >
                            Starts <strong>May 12th</strong>
                        </Challenge>
                    </div>
                    
                </div>
    
                <div class="swiper-pagination"></div>
            </div>
    
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
        </div>
    </div>
</div>

<script>
    import Swiper from "swiper";
    import { Navigation, Pagination } from "swiper/modules";
    const swiper = new Swiper(".swiper", {
        loop: false,
        modules: [Navigation, Pagination],
        slidesPerView: "auto",
        spaceBetween: 20,
        pagination: {
            el: ".swiper-pagination",
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });
</script>